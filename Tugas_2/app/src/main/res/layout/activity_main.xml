<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp">


    <Button
        android:id="@+id/btn_linear"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:textSize="30dp"
        android:onClick="actionLinLayout"
        android:layout_marginBottom="10dp"
        android:background="@drawable/lingkaran"/>
    <TextView
        android:id="@+id/btn_teks1"
        android:layout_width="wrap_content"
        android:layout_below="@+id/btn_linear"
        android:layout_height="wrap_content"
        android:text="Linear Layout"/>

    <Button
        android:id="@+id/btn_relative"
        android:layout_marginStart="120dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:onClick="actionRenLayout"
        android:layout_marginBottom="10dp"
        android:background="@drawable/lingkaran"
        android:text="2"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/btn_teks2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relative Layout"
        android:layout_marginStart="120dp"
        android:layout_below="@id/btn_relative" />
    <Button
        android:id="@+id/btn_constraint"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/lingkaran"
        android:layout_marginStart="240dp"
        android:onClick="CenLayout"
        android:text="3"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/btn_teks3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Constraint Layout"
        android:layout_marginStart="230dp"
        android:layout_below="@+id/btn_constraint"/>

    <Button
        android:id="@+id/btn_frame"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn_linear"
        android:layout_marginVertical="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:onClick="actionframe"
        android:background="@drawable/lingkaran"
        android:text="4"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/btn_teks4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="frame Layout"
        android:layout_below="@+id/btn_linear"
        android:layout_marginVertical="140dp"/>

    <Button
        android:id="@+id/btn_tabel"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/lingkaran"
        android:layout_below="@+id/btn_relative"
        android:layout_marginLeft="120dp"
        android:onClick="actiontabel"
        android:layout_marginVertical="40dp"
        android:text="5"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/btn_teks5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_relative"
        android:layout_marginVertical="140dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="202dp"
        android:text="Tabel Layout" />

    <Button
        android:id="@+id/btn_design"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/lingkaran"
        android:layout_below="@+id/btn_constraint"
        android:layout_marginLeft="240dp"
        android:layout_marginVertical="40dp"
        android:onClick="actionDesign"
        android:text="6"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/btn_teks6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Material Design"
        android:layout_marginStart="240dp"
        android:layout_below="@+id/btn_constraint"
        android:layout_marginVertical="140dp"/>

    <Button
        android:id="@+id/btn_sroll"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/lingkaran"
        android:layout_below="@+id/btn_frame"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="50dp"
        android:text="7"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/btn_teks7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scroll View "
        android:layout_marginStart="65dp"
        android:layout_below="@+id/btn_frame"
        android:layout_marginVertical="115dp"/>
    <Button
        android:id="@+id/btn_sroll_h"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/lingkaran"
        android:layout_below="@+id/btn_frame"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="180dp"
        android:text="8"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/btn_teks8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scroll View Horizontal "
        android:layout_marginStart="165dp"
        android:layout_below="@+id/btn_frame"
        android:layout_marginVertical="115dp"/>



</RelativeLayout>